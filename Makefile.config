##### Compiler
CXX=c++
#CXX=icpc
#CXX=g++

##### preprocessor flags
CPPFLAGS_COMMON=-I/usr/pkg/include #-DNO_HASH_MAP
CPPFLAGS_SPARSEHASH=
CPPFLAGS_BOOST=-DNO_BOOST #-I/usr/pkg/include/boost
CPPFLAGS_STLPORT=-I/usr/pkg/include/stlport

##### compilation flags
CFLAGS_COMMON=-Wall
CFLAGS_OPT=-O3 -DNDEBUG
CFLAGS_TEST=-O0 -g

##### linking flags
LDFLAGS_COMMON=-L/usr/pkg/lib
LDFLAGS_STLPORT=-lstlport_gcc
LDFLAGS_JUDY=-lJudy
LDFLAGS_TEST=-g

##### paths
PREFIX=/usr/local
INSTALL_DIR=install -d -m 755
INSTALL_FILE=install -m 644

##### gmake program
GMAKE_PROG=gmake

#####
CPPFLAGS=-Isrc_lib ${CPPFLAGS_STLPORT} ${CPPFLAGS_BOOST} ${CPPFLAGS_SPARSEHASH} ${CPPFLAGS_COMMON}

CFLAGS_O=-I. ${CPPFLAGS} ${CFLAGS_COMMON} ${CFLAGS_OPT}
CFLAGS_T=-I. ${CPPFLAGS} ${CFLAGS_COMMON} ${CFLAGS_TEST}

LDFLAGS_C=${LDFLAGS_COMMON} ${LDFLAGS_STLPORT} ${LDFLAGS_JUDY}

LDFLAGS_O=${LDFLAGS_C}
LDFLAGS_T=${LDFLAGS_TEST} ${LDFLAGS_C}
